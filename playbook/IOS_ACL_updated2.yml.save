---

- hosts: "IOS-Devices"
  gather_facts: true
  connection: network_cli

  tasks:
   - name: Configure ACL on Cisco Switch
     ios_config:
       ansible_become: yes
       lines:
         - access-list 99 permit 172.16.1.100
    


   - name: Verify ACL is present
     ios_command:
       commands:
         - sh access-l
       waitfor:
         - result[0] contains 'permit 172.16.1.100'


   - name: SAVE CONFIG
     ios_config:
       ansible_become: yes
       save: yes
